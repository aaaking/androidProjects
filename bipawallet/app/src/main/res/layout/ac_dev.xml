<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/deploy"
        android:text="deploy contract"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contract_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contract address: 0xa2264d93ccee94044b71da856e6b09c4e728530e"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/old_params"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="120dp"
            android:hint="招呼"/>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="call greet"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/new_params"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="120dp"
            android:text="zzh"
            android:hint="招呼"/>

        <Button
            android:id="@+id/btn_newGreeting"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="call newGreeting"/>
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:text="gotoSmartisanWeibo"
        android:onClick="gotoSmartisanWeibo"
        android:layout_height="wrap_content"/>

</LinearLayout>