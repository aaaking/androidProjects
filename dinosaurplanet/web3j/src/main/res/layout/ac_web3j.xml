<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Spinner
            android:id="@+id/spinner"
            android:layout_marginRight="80dp"
            android:layout_gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="连接"
            android:id="@+id/btn_Connect"
            android:layout_gravity="right|center_vertical"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/pwd"
            android:layout_marginRight="120dp"
            android:layout_width="match_parent"
            android:hint="设置钱包密码"
            android:layout_height="match_parent"/>
        <Button
            android:text="创建钱包"
            android:id="@+id/btn_GenerateWallet"
            android:layout_gravity="right|center_vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="60dp"
            android:hint="钱包地址"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=""
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:id="@+id/wallet_address"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <Button
        android:enabled="false"
        android:id="@+id/transfer"
        android:text="转账0.001ETH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txhash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:enabled="false"
        android:id="@+id/deploy"
        android:text="deploy contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/contract_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contract address"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/old_params"
            android:layout_marginRight="120dp"
            android:layout_width="match_parent"
            android:hint="招呼"
            android:layout_height="match_parent"/>
        <Button
            android:text="call greet"
            android:enabled="false"
            android:id="@+id/btn_call"
            android:layout_gravity="right|center_vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/new_params"
            android:layout_marginRight="120dp"
            android:layout_width="match_parent"
            android:hint="招呼"
            android:layout_height="match_parent"/>
        <Button
            android:text="call newGreeting"
            android:enabled="false"
            android:id="@+id/btn_newGreeting"
            android:layout_gravity="right|center_vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <Button
        android:id="@+id/custom_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="custom_transaction"/>

    <Button
        android:visibility="gone"
        android:id="@+id/offline_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="offline_sign"/>
    <Button
        android:id="@+id/btn_erc20_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test erc20 token"/>

</LinearLayout>